<Window x:Class="SimpleGame.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SimpleGame"
        mc:Ignorable="d"
        Title="SimpleGame" Height="508" Width="728" ResizeMode="NoResize" KeyDown="Window_KeyDown" KeyUp="Window_KeyUp">
    <Window.Resources>
        <Style x:Key="GameCanvas">
            <Style.Setters>
                <Setter Property="Canvas.Background" Value="#000"/>
                <Setter Property="Canvas.Width" Value="720"/>
                <Setter Property="Canvas.Height" Value="480"/>
            </Style.Setters>
        </Style>
    </Window.Resources>
    <Canvas Name="GameCanvas" Style="{StaticResource GameCanvas}"></Canvas>
</Window>
